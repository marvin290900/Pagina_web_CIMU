  <div class="absolute bottom-15 left-10 z-20 text-white max-w-xl">
    <h1 class="text-4xl font-bold">Centro de Investigación Multidisciplinario FMOcc UES</h1>
  </div>

  <!-- Carrusel con imagen duplicada al final -->
  <div id="carousel" class="flex h-screen transition-transform duration-1000 ease-in-out">
    <div class="w-full h-screen flex-shrink-0">
      <img src="/src/assets/imagen_inicio_1.png" class="w-full h-full object-cover" />
    </div>
    <div class="w-full h-screen flex-shrink-0">
      <img src="/src/assets/imagen_inicio_1.png" class="w-full h-full object-cover" />
    </div>
    <div class="w-full h-screen flex-shrink-0">
      <img src="/src/assets/imagen_inicio_1.png" class="w-full h-full object-cover" />
    </div>
    <!-- duplicado de la primera -->
    <div class="w-full h-screen flex-shrink-0">
      <img src="/src/assets/imagen_inicio_1.png" class="w-full h-full object-cover" />
    </div>
  </div>
</div>

<script>
  const track = document.getElementById('carousel');
  const totalSlides = 3; // reales
  let index = 0;

  function goToSlide(i, animate = true) {
    track.style.transitionDuration = animate ? "1000ms" : "0ms";
    track.style.transform = `translateX(-${i * 100}%)`;
  }

  setInterval(() => {
    index++;
    goToSlide(index);

    if (index === totalSlides) {
      // esperar a que termine la animación antes de reiniciar al slide 0
      setTimeout(() => {
        goToSlide(0, false); // sin animación
        index = 0;
      }, 1000); // igual a duración de transición
    }
  }, 5000);
</script>
