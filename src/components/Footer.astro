---
const { cimuLogo, uesLogoBlanco, plumaLogo, submarcaCIMU } = Astro.props;
---

<footer id="footer" class="bg-gray-900 text-gray-200 p-5">
  <div class="footer sm:footer-horizontal px-10 mt-5">
    <a href="/contactenos" title="Ponte en contacto con nostros" class="hover:scale-105 hover:brightness-110 transition-all duration-300">
      <h6 class="footer-title">Contacto</h6>
      <div class="flex items-center gap-2 my-1">
        <span class="mdi mdi-map-marker text-gray-600"></span>
        <span>Santa Ana, El Salvador</span>
      </div>
      <div class="flex items-center gap-2 my-1">
        <span class="mdi mdi-phone text-gray-600"></span>
        <span>+503 1234-5678</span>
      </div>
      <div class="flex items-center gap-2 my-1">
        <span class="mdi mdi-email text-gray-600"></span>
        <span>editorial.occidente@ues.edu.sv</span>
      </div>
    </a>

    <a href="/contactenos" title="Ponte en contacto con nostros" class="hover:scale-105 hover:brightness-110 transition-all duration-300">
      <h6 class="footer-title">Direcci√≥n</h6>
      <div class="flex items-center gap-2 my-1">
        <span class="mdi mdi-map-marker text-gray-600"></span>
        <span> Facultad Multidisciplinaria de Occidente,<br>Universidad de El Salvador.</span>
      </div>
    </a>

    <a href="/contactenos" title="Ponte en contacto con nostros" class="hover:scale-105 hover:brightness-110 transition-all duration-300">
      <h6 class="footer-title">Horario</h6>
      <div class="flex items-center gap-2 my-1">
        <span class="mdi mdi-clock text-gray-600"></span>
        <span>Lunes a Viernes, 8:00 AM - 4:00 PM</span>
      </div>
    </a>

    <a href="/contactenos" class="avatar-group -space-x-6 flex hover:scale-105 hover:brightness-110 transition-all duration-300 " title="Ponte en contacto con nostros">
      <div
        class="avatar rounded-full bg-blue-600 w-12 h-12 flex items-center justify-center text-white text-xl border-white border-1"
      >
        <span class="mdi mdi-facebook"></span>
      </div>
      <div
        class="avatar rounded-full bg-sky-400 w-12 h-12 flex items-center justify-center text-white text-xl border-white border-1"
      >
        <span class="mdi mdi-twitter"></span>
      </div>
      <div
        class="avatar rounded-full bg-pink-600 w-12 h-12 flex items-center justify-center text-white text-xl border-white border-1"
      >
        <span class="mdi mdi-instagram"></span>
      </div>
      <div
        class="avatar rounded-full bg-blue-700 w-12 h-12 flex items-center justify-center text-white text-xl border-white border-1"
      >
        <span class="mdi mdi-linkedin"></span>
      </div>
    </a>
  </div>
  <div class="text-center mt-10 text-sm text-gray-500">
    <p>
  &copy; {new Date().getFullYear()} CIMU - Universidad de El Salvador, Facultad Multidisciplinaria de Occidente | Todos los derechos reservados
</p>
  </div>
</footer>

<style>
  .avatar:hover {
  filter: brightness(110%);
  cursor: pointer;
}
</style>