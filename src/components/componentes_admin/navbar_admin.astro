<!-- Encabezado principal -->
<header
  id="mainHeader"
  class="navbar fixed top-0 left-0 w-full z-40 bg-gray-900 text-white shadow"
>
  <div class="w-full flex items-center justify-between px-4 md:px-6 h-10">
    <div class="flex items-center gap-3">
      <!-- Botón para mostrar el sidebar -->
      <button id="toggleSidebar" class="btn btn-sm btn-ghost text-white focus:outline-none mdi mdi-menu text-2xl hover:bg-blue-950"/>
        
      <!-- Título -->
      <a href="/admin/informacion" class="text-xs sm:text-xs md:text-lg lg:text-lg font-bold uppercase">Panel de Administración</a>
    </div>


    <!-- Avatar usuario -->
    <div class="flex items-center">
      <div class="w-10 h-10 rounded-full overflow-hidden border-2 border-white">
        <img
          src="https://i.pravatar.cc/150?img=3"
          alt="Usuario logueado"
          class="w-full h-full object-cover"
        />
      </div>
    </div>
  </div>
</header>


<!-- Scripts -->
<script is:inline>
  const sidebar = document.getElementById("sidebar");
  const toggleSidebar = document.getElementById("toggleSidebar");
  const closeSidebar = document.getElementById("closeSidebar");
  const overlay = document.getElementById("sidebarOverlay");

  function openSidebar() {
    sidebar.classList.remove("-translate-x-full");
    sidebar.classList.add("translate-x-0");
    overlay.classList.remove("hidden");
  }

  function hideSidebar() {
    sidebar.classList.add("-translate-x-full");
    sidebar.classList.remove("translate-x-0");
    overlay.classList.add("hidden");
  }

  toggleSidebar.addEventListener("click", openSidebar);
  closeSidebar.addEventListener("click", hideSidebar);
  overlay.addEventListener("click", hideSidebar);

  // Cierra al hacer clic en cualquier enlace del sidebar
  document.querySelectorAll(".sidebar-link").forEach((link) => {
    link.addEventListener("click", () => {
      hideSidebar();
    });
  });

</script>
