function prepararEliminarImagen(id) {
  idImagenAEliminar = id;
  modalConfirmarEliminar.showModal();
}

// Confirmar eliminar
btnConfirmarEliminar.addEventListener("click", async () => {
  const boton = btnConfirmarEliminar;
  mostrarSpinnerEnBoton(boton);

  if (!idImagenAEliminar) {
    showMessage("âŒ ID invÃ¡lido para eliminar", "error");
    ocultarSpinnerEnBoton(boton);
    return;
  }

  // ðŸ”¥ Llamada a API para eliminar imagen
  await eliminarImagenCarrusel(idImagenAEliminar);

  // Limpiamos el id
  idImagenAEliminar = null;

  ocultarSpinnerEnBoton(boton);
  modalConfirmarEliminar.close();

  // Recargar lista
  await cargarImagenes();
});

// FunciÃ³n para eliminar imagen en el servidor
async function eliminarImagenCarrusel(id) {
  try {
    const respuesta = await fetch("/api/inicio/eliminar", {
      method: "DELETE",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ id }),
    });

    const resultado = await respuesta.json();

    if (resultado.ok) {
      showMessage("âœ… Imagen eliminada correctamente", "success");
    } else {
      showMessage("âŒ Error al eliminar: " + (resultado.error || "Desconocido"), "error");
    }
  } catch (err) {
    console.error("âŒ Error en eliminarImagenCarrusel:", err);
    showMessage("âŒ Error al conectar con el servidor", "error");
  }
}


