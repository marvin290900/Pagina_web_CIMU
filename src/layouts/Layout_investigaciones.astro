---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import Header from "../components/Header_investigacion.astro";

import cimuLogo from "../assets/cimu.png";
import uesLogoBlanco from "../assets/uesLogoBlanco.svg";
import uesLogoRojo from "../assets/uesLogoRojo.svg";
import plumaLogo from "../assets/logo_pluma_multi.png";
import submarcaCIMU from "../assets/logo_submarca.png";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Centro de Investigaci√≥n - CIMU</title>
    <link
      href="https://cdn.materialdesignicons.com/7.2.96/css/materialdesignicons.min.css"
      rel="stylesheet"
    />
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&display=swap" rel="stylesheet">

  </head>
  <body>
    <Header cimuLogo={cimuLogo} uesLogoBlanco={uesLogoBlanco} uesLogoRojo={uesLogoRojo}/>
    <main class="zoom-fade-in-up">
      <slot />
    </main>
    <Footer cimuLogo={cimuLogo} uesLogoBlanco={uesLogoBlanco} plumaLogo={plumaLogo} submarcaCIMU={submarcaCIMU} />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: 'Spectral', serif;
  }

  @keyframes zoomFadeInUp {
    0% {
      opacity: 0;
      transform: translateY(30px) scale(0.95);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .zoom-fade-in-up {
    animation: zoomFadeInUp 0.7s ease-out;
  }
</style>
