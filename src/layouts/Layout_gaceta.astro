---
import "../styles/global.css";
import Footer from "../components/Footer.astro";

import cimuLogo from "../assets/logos/LogoConTextoCIMU.svg";
import uesLogoBlanco from "../assets/logos/uesLogoBlanco.svg";
import plumaLogo from "../assets/logos/logo_pluma_multi.png";
import submarcaCIMU from "../assets/logos/logo_submarca.png";
import gaceta from "../assets/logos/gaceta.png";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Centro de Investigación - CIMU</title>
    <link
      href="https://cdn.materialdesignicons.com/7.2.96/css/materialdesignicons.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header>
      <div class="w-full flex justify-center py-3">
        <img src={gaceta.src} alt="Logo de gaceta" class="w-1/4" />
      </div>
      <!-- Navigation -->
      <nav class="shadow-md">
        <div class="container mx-auto px-4 flex w-full justify-center">
          <div
            class="flex flex-wrap justify-center md:justify-start gap-1 py-3"
          >
            <a
              href="/gaceta"
              class="nav-link px-4 py-2 rounded-md"
              data-category="
              all">Inicio</a
            >
            <a
              href="/gaceta/categorias/opinion"
              class="nav-link px-4 py-2 rounded-md"
              data-category="politica">Opinión Multidisciplinaria</a
            >
            <a
              href="/gaceta/categorias/actualidad"
              class="nav-link px-4 py-2 rounded-md"
              data-category="economia">Actualidad</a
            >
            <a
              href="/gaceta/categorias/audio_visuales"
              class="nav-link px-4 py-2 rounded-md"
              data-category="deportes">Audio visuales</a
            >
            <a
              href="/gaceta/categorias/vida_universitaria"
              class="nav-link px-4 py-2 rounded-md"
              data-category="cultura">Vida universitaria</a
            >
            <a
              href="/gaceta/categorias/memorias"
              class="nav-link px-4 py-2 rounded-md"
              data-category="tecnologia">Memoria colectiva</a
            >
          </div>
        </div>
      </nav>
    </header>
    <main class="zoom-fade-in-up">
      <slot />
    </main>
    <Footer
      cimuLogo={cimuLogo}
      uesLogoBlanco={uesLogoBlanco}
      plumaLogo={plumaLogo}
      submarcaCIMU={submarcaCIMU}
    />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Nunito", sans-serif;
  }

  @keyframes zoomFadeInUp {
    0% {
      opacity: 0;
      transform: translateY(30px) scale(0.95);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .zoom-fade-in-up {
    animation: zoomFadeInUp 0.7s ease-out;
  }
  .nav-link {
    position: relative;
    transition: color 0.3s ease;
  }
  .nav-link::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: #f97316;
    transition: width 0.3s ease;
  }
  .nav-link:hover::after,
  .nav-link.active::after {
    width: 100%;
  }
</style>
